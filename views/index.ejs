<%- include('partials/header') %>
<div class="p-5 mb-4 bg-light rounded-3">
    <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Find Your Next Opportunity</h1>
        <p class="col-md-8 fs-4">Search through thousands of job listings from top companies.</p>
    </div>
</div>
<h2>Latest Jobs</h2>
<div class="row">
    <% if(jobs.length > 0) { jobs.forEach(function(job) { %>
        <div class="col-md-12">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title"><%= job.title %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= job.company %> - <%= job.location %></h6>
                    <p class="card-text"><%= job.description.substring(0, 150) %>...</p>
                </div>
            </div>
        </div>
    <% }); } else { %><p>No jobs found.</p><% } %>
</div>
<%- include('partials/footer') %>